<div class="products">
	<section class="is-flex">
			<% @products.each do |product| %>
				<div class="product">
					<h4 class="title is-4"><%= product.new == true ? 'NEW! ' : '' %></h4>
					<h4 class="name title is-4"><a><%= link_to product.name, product_path(product.id) %></a></h4>
					<h5 class="title is-5"><%= product.on_sale == true ? 'ON SALE!' : '' %></h5>
					<% if product.image.attached? %>
						<p><%= image_tag(url_for(product.image), style: 'height:20vw;width:18vw') %></p>
					<% end %>
					<p><b><%= product.price %></b></p>
					<p><%= truncate(product.details, :length => 100) %></p>
				</div>
			<% end %>
	</section>
	<div class="container">
		<%= paginate @products %>
	</div>
</div>