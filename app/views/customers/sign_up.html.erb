<%= render 'components/header', page: 'Sign Up' %>
<div class="container account">
  <h2 class="title is-2">Sign Up</h2>
  <%= form_for @customer do |f| %>
    <%= f.label "Username" %>
    <%= f.text_field :username, :autofocus => true %><br>
    <%= f.label "Password" %>
    <%= f.password_field :password %><br>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br>
    <hr style="background-color:white">
    <h3 class="title is-3">Optional Upon Sign Up</h3>
    <p>*This information will be required to be filled out when placing orders.</p>
    <p>*If choosing to fill out this section now, all fields must be filled.</p><br>
    <%= f.collection_select(:province, Province.all, :id, :name, prompt: 'Select a Province') %><br>
    <%= f.label "City" %>
    <%= f.text_field :city %><br>
    <%= f.label "Address" %>
    <%= f.text_field :address %><br>
    <%= f.label "Postal Code" %>
    <%= f.text_field :postal_code %><br>
    <%= f.submit "Sign Up" %>
  <% end %>
</div>
<%= render :partial => 'components/footer' %>